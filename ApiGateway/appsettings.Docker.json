{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Information"
        }
    },

    "Jwt": {
        "Key": "HotelMicroservicesSecretKey2024!@#$%^&*()_+",
        "Issuer": "HotelMicroservices",
        "Audience": "HotelMicroservicesClients",
        "ExpireMinutes": 60
    },
    

    "ReverseProxy": {
        "Routes": {
            "catalogos-api": {
                "ClusterId": "catalogos",
                "Match": { "Path": "/api/catalogos/{**catch-all}" }
            },
            "usuarios-pagos-api": {
                "ClusterId": "usuarios-pagos",
                "Match": { "Path": "/api/usuarios-pagos/{**catch-all}" }
            },

            "catalogos-swagger": {
                "ClusterId": "catalogos",
                "Match": { "Path": "/catalogos/swagger/{**catch-all}" },
                "Transforms": [
                    { "PathRemovePrefix": "/catalogos" }
                ]
            },
            "usuarios-pagos-swagger": {
                "ClusterId": "usuarios-pagos",
                "Match": { "Path": "/usuarios-pagos/swagger/{**catch-all}" },
                "Transforms": [
                    { "PathRemovePrefix": "/usuarios-pagos" }
                ]
            },

            "habitaciones-graphql": {
                "ClusterId": "habitaciones",
                "Match": { "Path": "/graphql/{**catch-all}" }
            },
            "habitaciones-graphql-ui": {
                "ClusterId": "habitaciones",
                "Match": { "Path": "/graphql-ui/{**catch-all}" }
            }
        },

        "Clusters": {
            "catalogos": {
                "Destinations": {
                    "d1": { "Address": "http://catalogos:8080" }
                }
            },
            "usuarios-pagos": {
                "Destinations": {
                    "d1": { "Address": "http://usuarios-pagos:8080" }
                }
            },
            "habitaciones": {
                "Destinations": {
                    "d1": { "Address": "http://habitaciones:8080" }
                }
            },
            "reservas": {
                "Destinations": {
                    "d1": { "Address": "http://reservas:8080" }
                }
            }
        }
    }
}
